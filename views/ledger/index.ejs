<%- contentFor('HeaderCss') %> <%- include ('../partials/title-meta',
{"title":"Ledger"}) %>
<!-- DataTables -->
<link
  href="/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css"
  rel="stylesheet"
  type="text/css"
/>

<!-- Responsive datatable examples -->
<link
  href="/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css"
  rel="stylesheet"
  type="text/css"
/>

<%- contentFor('body') %> <%- include('../partials/page-title', { "pagetitle":
user.username + ' Ledger', "title": user.username + ' Ledger' }) %>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="row card-title mt-3">
        <div class="col-md-11">
          <h4 class="card-title"><%= user.username %> Ledger</h4>
        </div>
      </div>
      <div class="card-body">
        <table id="ledgerdatatable" class="table table-bordered dt-responsive nowrap w-100">
          <thead>
            <tr>
              <th>Account</th>
              <th>Minus</th>
              <th>Account</th>
              <th>Plus</th>
            </tr>
          </thead>
          <tbody>
            <!-- Loop through both left (Minus) and right (Plus) accounts together -->
            <% for (let i = 0; i < Math.max(leftAccounts.length, rightAccounts.length); i++) { %>
              <tr>
                <!-- Display Minus Account and Balance -->
                <td><%= leftAccounts[i] ? leftAccounts[i].account : '' %></td>
                <td style="color: red"><%= leftAccounts[i] ? leftAccounts[i].negative : '' %></td>
        
                <!-- Display Plus Account and Balance -->
                <td><%= rightAccounts[i] ? rightAccounts[i].account : '' %></td>
                <td style="color: green"><%= rightAccounts[i] ? rightAccounts[i].positive : '' %></td>
              </tr>
            <% } %>
        
            <!-- Display Balance Key if Balance is Greater than 0 (on Left Side) -->
            <% if (balanceKey > 0) { %>
              <tr>
                <td>Balance</td>
                <td style="color: red"><%= balanceKey %></td>
                <td></td>
                <td></td>
              </tr>
            <% } %>
        
            <!-- Display Balance Key if Balance is Less than 0 (on Right Side) -->
            <% if (balanceKey < 0) { %>
              <tr>
                <td></td>
                <td></td>
                <td>Balance</td>
                <td style="color: green"><%= Math.abs(balanceKey) %></td>
              </tr>
            <% } %>
          </tbody>
        
          <tfoot>
            <tr>
              <th style="color: red">Total</th>
              <!-- Display total Minus (Left side) in Red -->
              <th style="color: red"><%= totalLeft %></th>
              <!-- Balance Key for Right Side -->
              <th style="color: green">Total</th>
              <!-- Display total Plus (Right side) in Green -->
              <th style="color: green"><%= totalRight %></th>
            </tr>
          </tfoot>
        </table>
        
      </div>
    </div>
  </div>
  <!-- end col -->
</div>
<!-- end row -->

<%- contentFor('FooterJs') %>
<!-- Required datatable js -->
<script src="/assets/libs/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="/assets/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>

<!-- Responsive examples -->
<script src="/assets/libs/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
<script src="/assets/libs/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>

<!-- Datatable init js -->
<script src="/assets/js/pages/datatables.init.js"></script>
<script>
 $(document).ready(function () {
    // Initialize DataTable
    const dataTable = $("#ledgerdatatable").DataTable({
      order: [
        [0, "desc"],
      ],
      pageLength: 200,
      lengthMenu: [
        [200, 50, 100, -1],
        [200, 50, 100, "All"],
      ],
      paging: true,
      searching: true,
      // ordering: true,
      autoWidth: false,
    });
    // If company_id exists in localStorage, display the relevant links in the sidebar
    const storedCompanyId = localStorage.getItem("company_id");
    if (storedCompanyId) {
      showSidebarLinks(storedCompanyId);
    }
  });
</script>
