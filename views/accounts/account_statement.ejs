            <tr>
              <th>Date</th>
              <th>Account</th>
              <th>Sub-Account</th>
              <th>Narration</th>
              <th>Minus</th>
              <th>Plus</th>
              <th>Balance</th>
            </tr>
          </thead>
          <tbody></tbody>
          <tfoot>
            <tr>
              <th colspan="4">Total</th>
              <th id="total_minus">0</th>
              <th id="total_plus">0</th>
              <th id="total_balance">0</th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
  <!-- end col -->
</div>
